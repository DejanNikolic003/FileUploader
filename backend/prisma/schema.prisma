generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @db.VarChar(255)
  password   String   @db.VarChar(255)
  email      String   @db.VarChar(255)
  is_admin   Boolean  @default(false)
  created_at DateTime @default(now())

  folders Folder[] @relation("UserFolders")
  files   File[]   @relation("UserFiles")

  @@map("users")
}

model Folder {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(50)
  user       User     @relation("UserFolders", fields: [user_id], references: [id])
  user_id    Int
  created_at DateTime @default(now())

  files File[] @relation("FolderFiles")

  @@map("folders")
}

model File {
  id            Int    @id @default(autoincrement())
  name          String @db.VarChar(255)
  original_name String @db.VarChar(255)

  folder    Folder @relation("FolderFiles", fields: [folder_id], references: [id])
  folder_id Int

  user    User @relation("UserFiles", fields: [user_id], references: [id])
  user_id Int

  created_at DateTime @default(now())

  @@map("files")
}
